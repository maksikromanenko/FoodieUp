<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.foodieup.presentation.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_search"
            app:destination="@id/nav_search" />
        <action
            android:id="@+id/action_nav_home_to_addressSelectionFragment"
            app:destination="@id/addressSelectionFragment" />
        <action
            android:id="@+id/action_nav_home_to_createOrderFragment"
            app:destination="@id/createOrderFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.foodieup.presentation.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.foodieup.presentation.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_nav_search_to_createOrderFragment"
            app:destination="@id/createOrderFragment" />
    </fragment>

    <fragment
        android:id="@+id/addressSelectionFragment"
        android:name="com.example.foodieup.presentation.fragments.AddressSelectionFragment"
        android:label="AddressSelectionFragment"
        tools:layout="@layout/fragment_address_selection" />

    <fragment
        android:id="@+id/nav_order_history"
        android:name="com.example.foodieup.presentation.fragments.OrderHistoryFragment"
        android:label="OrderHistoryFragment"
        tools:layout="@layout/fragment_order_history" />

    <fragment
        android:id="@+id/nav_favorite"
        android:name="com.example.foodieup.presentation.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_nav_favorite_to_createOrderFragment"
            app:destination="@id/createOrderFragment" />
    </fragment>

    <fragment
        android:id="@+id/createOrderFragment"
        android:name="com.example.foodieup.presentation.fragments.CreateOrderFragment"
        android:label="fragment_create_order"
        tools:layout="@layout/fragment_create_order">
        <argument
            android:name="restaurantName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="restaurantId"
            app:argType="integer" />
    </fragment>

</navigation>
